{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Provider (Attach to Terraform)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {
                "TF_LOG": "DEBUG",
                "TF_LOG_PROVIDER": "DEBUG"
            },
            "args": [
                "-debug"
            ],
            "dlvFlags": [
                "--check-go-version=false"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Acceptance Tests - Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "TF_ACC": "1",
                "TF_LOG": "DEBUG",
                "TF_LOG_PATH": "${workspaceFolder}/debug.log"
            },
            "args": [
                "-test.v",
                "-test.timeout=120m"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Acceptance Tests - Specific Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "TF_ACC": "1",
                "TF_LOG": "DEBUG",
                "TF_LOG_PATH": "${workspaceFolder}/debug.log"
            },
            "args": [
                "-test.v",
                "-test.run=${input:testName}",
                "-test.timeout=120m"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Acceptance Tests - Resources and Data Sources",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/internal/acctest",
            "env": {
                "TF_ACC": "1",
                "TF_LOG": "DEBUG",
                "TF_LOG_PATH": "${workspaceFolder}/debug.log"
            },
            "args": [
                "-test.v",
                "-test.timeout=120m"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Unit Tests - Current File",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${fileDirname}",
            "env": {
                "TF_LOG": "DEBUG"
            },
            "args": [
                "-test.v",
                "-test.timeout=5m"
            ],
            "console": "integratedTerminal",
            "showLog": true
        },
        {
            "name": "Build Provider",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}",
            "env": {},
            "args": [],
            "console": "integratedTerminal",
            "showLog": true
        }
    ],
    "inputs": [
        {
            "id": "testName",
            "description": "Enter the test function name (e.g., TestAccUserDataSource_ByName)",
            "default": "TestAcc",
            "type": "promptString"
        }
    ]
}